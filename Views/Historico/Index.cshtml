@model List<Historico>
@{
    ViewData["Title"] = "Histórico";
}
<div class="container">


    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">Histórico</h2>
        </div>
    </div>
    @{
        if(Model != null)
        {
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Matéria</th>
                        <th>Professor</th>
                        <th>Estado</th>
                        <th>Aluno</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@(item.Materia?.Nome ?? "N/A")</td>
                            <td>@(item.Materia?.Professor?.Nome ?? "N/A")</td>
                            <td>@(item.Estado?.Nome ?? "N/A")</td>
                            <td>@(item.Aluno?.Nome ?? "N/A")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    
</div>